{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "sourceMap": true,
        "preserveConstEnums": true,
        "declaration": true,
        "outDir": "dist"
    },
    "typeRoots": [
          "node_modules/@types"
        ],
    "types" : [
          "core-js",
          "pouchdb"
    ],
    "include": [
        "src/**/*",
        "tests/**/*"       
    ],
    "exclude": [
        "node_modules"
    ]
}
